{
  "name": "ADFCookBook-HiveStorage",
  "properties": {
    "structure": [
      {
        "name": "OrderDate",
        "type": "Datetime"
      },
      {
        "name": "CompanyName",
        "type": "String"
      },
      {
        "name": "Category",
        "type": "String"
      },
      {
        "name": "QtyOrdered",
        "type": "Int32"
      },
      {
        "name": "UnitPrice",
        "type": "Decimal"
      },
      {
        "name": "Discount",
        "type": "Decimal"
      },
      {
        "name": "TaxAmount",
        "type": "Decimal"
      },
      {
        "name": "Freight",
        "type": "Decimal"
      },
      {
        "name": "OrderNumber",
        "type": "String"
      },
      {
        "name": "PurchaseOrderNumber",
        "type": "String"
      }
    ],
    "published": false,
    "type": "AzureBlob",
    "linkedServiceName": "ADFCookBookBlobStore",
    "typeProperties": {
      "folderPath": "outout/text/{Year}/{Month}/{Day}",
      "format": {
        "type": "TextFormat",
        "rowDelimiter": "\n",
        "columnDelimiter": "|",
        "escapeChar": "",
        "nullValue": "Null",
        "quoteChar": ""
      },
      "partitionedBy": [
        {
          "name": "Year",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyyy"
          }
        },
        {
          "name": "Month",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "%M"
          }
        },
        {
          "name": "Day",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "%d"
          }
        }
      ]
    },
    "availability": {
      "frequency": "Day",
      "interval": 3
    }
  },
  "$schema": "http://datafactories.schema.management.azure.com/schemas/2015-08-01/Microsoft.DataFactory.Table.json"
}